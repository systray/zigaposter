{
  "manifest_version": 2,

  "name": "Zigaposter",
  "description": "This extension post :ziga: smile in the end of each of your chat message on sc2tv.ru.",
  "version": "1.0.2",

  "content_scripts": [
    {
      "matches": ["http://chat.sc2tv.ru/*", "http://sc2tv.ru/*"],
      "js": ["background.js"],
      "all_frames": true
    }
  ],
  "permissions": [
    "storage"
  ],

  "options_page": "options.html"
}
